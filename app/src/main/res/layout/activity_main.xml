<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:padding="8dp"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="example.uca.labo2.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textViewPlayerA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/player_a"
                android:layout_margin="2dp"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/textViewPointsA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_margin="2dp"
                android:textSize="24sp"/>

            <Button
                android:id="@+id/changeTextButtonA"
                android:background="@color/colorPrimary"
                android:text="@string/point"
                android:textColor="#FFFFFF"
                android:layout_margin="2dp"
                android:onClick="addPointA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textViewPlayerB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/player_b"
                android:layout_margin="2dp"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/textViewPointsB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_margin="2dp"
                android:textSize="24sp"/>

            <Button
                android:id="@+id/changeTextButtonB"
                android:background="@color/colorPrimary"
                android:text="@string/point"
                android:textColor="#FFFFFF"
                android:layout_margin="2dp"
                android:onClick="addPointB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"/>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/resetButton"
        android:background="@color/colorPrimary"
        android:text="@string/reset"
        android:textColor="#FFFFFF"
        android:layout_margin="8dp"
        android:onClick="resetPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"/>

</LinearLayout>
